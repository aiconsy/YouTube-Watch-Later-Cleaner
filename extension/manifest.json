{
  "manifest_version": 3,
  "name": "YouTube Watch Later Cleaner",
  "version": "0.1.0",
  "description": "Clean up your YouTube Watch Later playlist by removing watched videos or clearing the list.",
  "action": {
    "default_title": "Watch Later Cleaner",
    "default_popup": "popup.html"
  },
  "permissions": ["activeTab"],
  "host_permissions": ["https://www.youtube.com/*"],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/playlist*"],
      "js": ["contentScript.js"]
    }
  ]
}

